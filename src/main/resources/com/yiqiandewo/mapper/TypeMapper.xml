<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yiqiandewo.mapper.TypeMapper">

    <insert id="addType" parameterType="com.yiqiandewo.pojo.Type">
        insert into t_type(name) values(#{name});
    </insert>

    <select id="queryById" parameterType="Long" resultType="com.yiqiandewo.pojo.Type">
        select * from t_type where `id` = #{id};
    </select>

    <select id="queryAll" resultType="com.yiqiandewo.pojo.Type">
        select * from t_type
    </select>

    <update id="updateType" parameterType="com.yiqiandewo.pojo.Type">
        update `t_type` set `name` = #{name} where `id` = #{id};
    </update>

    <delete id="deleteType" parameterType="Long">
        delete from `t_type` where `id` = #{id};
    </delete>


</mapper>